---
import { SITE_NAME } from '../lib/constants'
import '../styles/global.css'

interface Props {
  content?: {
    title?: string
  }
}

const { content } = Astro.props

const title = content?.title ? `${content.title} Â· ${SITE_NAME}` : SITE_NAME
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-100 p-2 pt-0">
    <slot />
  </body>
</html>
