---
import { Image } from 'astro:assets'

import logo from '../images/communile-logo.png'
import { SITE_NAME } from '../utils/constants'

import Button from './button.astro'
import Icon from './icon.astro'
import Link from './link.astro'
import VisuallyHidden from './visually-hidden.astro'
---

<header class="bg-white rounded-sm m-2 px-4 py-3 flex items-center justify-between">
  <Link href="/" class="font-bold uppercase text-neutral-800 hover:text-neutral-700 flex items-center gap-3">
    <Image src={logo} alt="" aria-hidden="true" role="presentation" width={40} height={40} />
    {SITE_NAME}
  </Link>
  
  <Button 
    type="button" 
    class="p-2 text-neutral-800 rounded-md hover:bg-neutral-100"
  >
    <VisuallyHidden>Menu</VisuallyHidden>
    <Icon name="menu" size={24} />
  </Button>
</header>
